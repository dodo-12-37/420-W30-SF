        + Etat : string <<get>> <<set>>
        + Pays : string  <<get>> <<set>>
        + ctor()
        + ctor(p_adresse : Adresse)
        + VersEntite() : Adresse
    }

    class DepotClientsJSON {
        - m_nomFichier : string
